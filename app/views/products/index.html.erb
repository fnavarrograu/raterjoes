<div>
  <div>
    <h1>
      List of all products
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new product
    </h2>

    <form action="/insert_product" method="post" class="form-horizontal" enctype="multipart/form-data">
      <div>
        <label for="product_name_box">
          Product name
        </label>

        <input type="text" id="product_name_box" name="query_product_name">
      </div>

      <div>
        <label for="description_box">
          Description
        </label>

        <input type="text" id="description_box" name="query_description">
      </div>

      <div>
        <label for="product_category_box">
          Product Category
        </label>

        <select input type="text" id="product_category_box" name="query_product_category">
            <option value="Bakery">Bakery</option>
            <option value="Cheese, Dairy, and Eggs">Cheese, Dairy, and Eggs</option>
            <option value="Dips, Sauces & Dressings">Dips, Sauces & Dressings</option>
            <option value="From the Freezer">From the Freezer</option>
            <option value="Fresh Fruits & Veggies">Fresh Fruits & Veggies</option>
            <option value="Meat, Seafood, and Plant-based products">Meat, Seafood, and Plant-based products</option>
            <option value="For the Pantry">For the Pantry</option>
            <option value="Snacks & Sweets">Snacks & Sweets</option>
            <option value="Beverages">Beverages</option>
            <option value="Everything Else">Everything Else</option>
        </select>

      </div>      

      <div>
        <label for="price_box">
          Price
        </label>

        <input type="text" id="price_box" name="query_price">
      </div>

      <div>
        <label for="image_box">
          Image
        </label>

        <input type="file" id="image" name="image" class="form-control">
      </div>

      <button>
        Create product
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table border="1">
      <tr>
        <th>
          ID
        </th>

        <th>
          Product name
        </th>

        <th>
          Description
        </th>

        <th>
          Product Category
        </th>        

        <th>
          Price
        </th>

        <th>
          Average rating
        </th>

        <th>
          Image
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_products.each do |a_product| %>
      <tr>
        <td>
          <%= a_product.id %>
        </td>

        <td>
          <%= a_product.product_name %>
        </td>

        <td>
          <%= a_product.description %>
        </td>

        <td>
          <%= a_product.product_category %>
        </td>        

        <td>
          <%= a_product.price %>
        </td>

        <td>
          <%= a_product.average_rating %>
        </td>

        <td>
          <img src="<%= a_product.image %>" class="img-responsive">
        </td>

        <td>
          <%= time_ago_in_words(a_product.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_product.updated_at) %> ago
        </td>

        <td>
          <a href="/products/<%= a_product.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
