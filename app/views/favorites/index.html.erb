<div>
  <div>
    <h1>
      <%#= session.fetch(:user).username %>'s List
    </h1>
  </div>
</div>

    <form action="/insert_favorite" method="post">

        <input type="hidden" id="user_id_box" name="query_user_id">

        <input type="hidden" id="product_id_box" name="query_product_id">

    </form>

<hr>
<div>
  <div>
    <table border="1">
      <tr>
        <th>
          ID
        </th>

        <th>
          User
        </th>

        <th>
          Product
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_favorites.each do |a_favorite| %>
      <tr>
        <td>
          <%= a_favorite.id %>
        </td>

        <td>
          <%= a_favorite.user_id %>
        </td>

        <td>
          <%= a_favorite.product_id %>
        </td>

        <td>
          <%= time_ago_in_words(a_favorite.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_favorite.updated_at) %> ago
        </td>

        <td>
          <a href="/favorites/<%= a_favorite.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
